@using InvestCarWeb.Controllers
@model  IEnumerable<InvestCarWeb.Models.Leiloeiro>

    <div class="panel panel-default panel-controls">
        <!-- .page-content-wrapper -->
        <div class="page-content-wrapper">
            <div class="page-content-inner">
                <!-- Start .row -->
                <div class="row">
                    <div class="col-lg-12">
                        <!-- col-lg-12 start here -->
                        <div class="panel panel-default plain toggle panelMove panelClose panelRefresh">
                            <!-- Start .panel -->
                            <div class="panel-heading">
                                <h4 class="panel-title">Leiloeiros</h4>
                                <a asp-action="Create">
                                    Adicionar
                                </a>
                            </div>
                            <div class="panel-body">
                                <table id="basic-datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Nome</th>
                                            <th>Telefone</th>
                                            <th>Site</th>
                                            <th>TaxaAvaliacaoPadrao</th>
                                            <th>TaxaVendaPadrao</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Nome</th>
                                            <th>Telefone</th>
                                            <th>Site</th>
                                            <th>TaxaAvaliacaoPadrao</th>
                                            <th>TaxaVendaPadrao</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id='@item.Id'>
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefone)
                                            </td>
                                            <td>
                                                @if (!(item.Site == null))
                                                {
                                                    <a href='@item.Site' target="_blank">
                                                        Ir para
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaxaAvaliacaoPadrao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaxaVendaPadrao)
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- End .panel -->
                    </div>
                </div>
                <!-- End .row -->
            </div>
            <!-- End .page-content-inner -->
        </div>
        <!-- / page-content-wrapper -->
    </div>
