@using InvestCarWeb.Controllers
@model  IEnumerable<InvestCarWeb.Models.Produto>

    <div class="panel panel-default panel-controls">
        <!-- .page-content-wrapper -->
        <div class="page-content-wrapper">
            <div class="page-content-inner">
                <!-- Start .row -->
                <div class="row">
                    <div class="col-lg-12">
                        <!-- col-lg-12 start here -->
                        <div class="panel panel-default plain toggle panelMove panelClose panelRefresh">
                            <!-- Start .panel -->
                            <div class="panel-heading">
                                <h4 class="panel-title">Produtos</h4>
                                <a asp-action="Create">
                                    Adicionar
                                </a>
                            </div>
                            <div class="panel-body">
                                <table id="basic-datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Data</th>
                                            <th>Descricao</th>
                                            <th>Anunc</th>
                                            <th>Negoc</th>
                                            <th>Compra</th>
                                            <th>Venda</th>
                                            <th>Bairro</th>
                                            <th>Endereco</th>
                                            <th>Localizacao</th>
                                            <th>Anuncio</th>
                                            <th>Telefone</th>
                                            <th>Vendedor</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Data</th>
                                            <th>Descricao</th>
                                            <th>Anunc</th>
                                            <th>Negoc</th>
                                            <th>Compra</th>
                                            <th>Venda</th>
                                            <th>Bairro</th>
                                            <th>Endereco</th>
                                            <th>Localizacao</th>
                                            <th>Anuncio</th>
                                            <th>Telefone</th>
                                            <th>Vendedor</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Data)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id='@item.Id'>
                                                    @Html.DisplayFor(modelItem => item.Descricao)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VlAnunciado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VlNegociado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VlCompra)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VlVenda)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Bairro)
                                            </td>
                                            <td>
                                                @if (!(item.Endereco == null))
                                                {
                                                    @item.Endereco.ToString().Substring(0, (item.Endereco.Length > 10) ? 10 : item.Endereco.Length)
                                                }
                                            </td>
                                            <td>
                                                @if (!(item.Localizacao == null))
                                                {
                                                    <a href='@item.Localizacao' target="_blank">
                                                        @item.Localizacao.ToString().Substring(0, (item.Localizacao.Length > 10) ? 10 : item.Localizacao.Length)
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                @if (!(item.Anuncio == null))
                                                {
                                                    <a href='@item.Anuncio' target="_blank">
                                                        @item.Anuncio.ToString().Substring(0, (item.Anuncio.Length > 10) ? 10 : item.Anuncio.Length)
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Vendedor)
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- End .panel -->
                    </div>
                </div>
                <!-- End .row -->
            </div>
            <!-- End .page-content-inner -->
        </div>
        <!-- / page-content-wrapper -->
    </div>
