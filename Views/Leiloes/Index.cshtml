@using InvestCarWeb.Controllers
@model  IEnumerable<InvestCarWeb.Models.Leilao>

    <div class="panel panel-default panel-controls">
        <!-- .page-content-wrapper -->
        <div class="page-content-wrapper">
            <div class="page-content-inner">
                <!-- Start .row -->
                <div class="row">
                    <div class="col-lg-12">
                        <!-- col-lg-12 start here -->
                        <div class="panel panel-default plain toggle panelMove panelClose panelRefresh">
                            <!-- Start .panel -->
                            <div class="panel-heading">
                                <h4 class="panel-title">Leilão</h4>
                                <a asp-action="Create">
                                    Adicionar
                                </a>
                            </div>
                            <div class="panel-body">
                                <table id="basic-datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Descricao</th>
                                            <th>Data</th>
                                            <th>TaxaAvaliacao</th>
                                            <th>TaxaVenda</th>
                                            <th>Leiloeiro</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Descricao</th>
                                            <th>Data</th>
                                            <th>TaxaAvaliacao</th>
                                            <th>TaxaVenda</th>
                                            <th>Leiloeiro</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id='@item.Id'>
                                                    @Html.DisplayFor(modelItem => item.Descricao)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Data)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaxaAvaliacao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaxaVenda)
                                            </td>
                                            <td>
                                                <a asp-controller="Leiloeiros" asp-action="Details"  asp-route-id="@item.LeiloeiroId">
                                                    @Html.DisplayFor(modelItem => item.Leiloeiro.Nome)
                                                </a>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- End .panel -->
                    </div>
                </div>
                <!-- End .row -->
            </div>
            <!-- End .page-content-inner -->
        </div>
        <!-- / page-content-wrapper -->
    </div>
